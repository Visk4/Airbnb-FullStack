<% layout("/layouts/boilerplate")%>
<body>
    <div class="row mt-3">
        <h1 class="col-6 offset-3">Login to Wanderlust</h1>
        <div class="col-6 offset-3">
            <form method="POST" action="/login" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label">username</label>
                    <input name="username" id="username" type="text" placeholder="Your username" class="form-control" required>
                    <div class="valid-feedback">Looks good!</div>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">password</label>
                    <input name="password" id="password" type="password" placeholder="Enter password" class="form-control" required>
                </div>
                <button class="btn btn-success">Login</button>
        </div>
    </div>
</body>